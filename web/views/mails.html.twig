{% extends 'base.html.twig' %}
{% block content %}
{% for mail in mails %}
<a href="#" data-reveal-id="reveal">
    <ul class="vcard">
        <li class="fn">{{ mail.from.0.personal }} </li>
        <li class="subject">{{ mail.subject }} </li>
        <li class="date"><h6 class="subheader"> {{ mail.date }} </h6></li>
        {# <li class="email">{{ mail.from.0.mailbox }}@{{ mail.from.0.host }}</li> #}
    </ul>
</a>
{% endfor %}
{% endblock %}
{% block reveal %}
<div id="reveal" class="reveal-modal">
    <h2>Awesome. I have it.</h2>
    <p class="lead">Your couch.  It is mine.</p>
    <p>Im a cool paragraph that lives inside of an even cooler modal. Wins</p>
    <a class="close-reveal-modal">&#215;</a>
</div>
<script>
document.write('<script src=/js/vendor/'
    + ('__proto__' in {} ? 'zepto' : 'jquery')
    + '.js><\/script>');
</script>
<script src="/js/foundation/foundation.js"></script>
<script src="/js/foundation/foundation.reveal.js"></script>
<script>
$(function(){
    $(document).foundation();    
})
</script>
{% endblock %}
